{
  "compilerOptions": {
    "baseUrl": "../src",
    "outDir": "../output/out/src",
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es5"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["../src"]
}
